{
    "name" : "crumble",

    "version" : "3.0.0",

    "type" : "module",

    "description" : "A RFC-6265 compliant library that makes reading and writing cookies easy.",

    "author" :
    {
        "name" : "Luke Phillips",
        "email" : "lsphillips.mail@gmail.com"
    },

    "keywords" :
    [
        "cookies"
    ],

    "homepage" : "https://github.com/lsphillips/Crumble",

    "bugs" :
    {
        "url" : "https://github.com/lsphillips/Crumble/issues"
    },

    "devDependencies" :
    {
        "rollup" : "4.17.2",
        "@rollup/plugin-terser" : "0.4.4",
        "@rollup/plugin-babel" : "6.0.4",
        "mocha" : "10.4.0",
        "chai" : "4.4.1",
        "chai-string" : "1.5.0",
        "sinon" : "17.0.1",
        "eslint" : "8.57.0",
        "eslint-plugin-import" : "2.29.1",
        "eslint-plugin-promise" : "6.1.1",
        "@stylistic/eslint-plugin-js" : "1.8.0",
        "eslint-config-protect-me-from-my-stupidity" : "10.1.0",
        "@babel/core" : "7.24.5",
        "@babel/preset-env" : "7.24.5"
    },

    "main" : "crumble.cjs",

    "exports" :
    {
        "import" : "./crumble.js",
        "require" : "./crumble.cjs",
        "default" : "./crumble.cjs"
    },

    "files" :
    [
        "/README.md",
        "/CHANGELOG.md",
        "/LICENSE.txt",
        "/crumble.js",
        "/crumble.cjs",
        "/crumble.d.ts"
    ],

    "repository" :
    {
        "type" : "git",
        "url" : "https://github.com/lsphillips/Crumble.git"
    },

    "license" : "MIT",

    "scripts" :
    {
        "test:lint" : "eslint \"**/*.js\" --ignore-path .gitignore",
        "test:unit" : "mocha \"tests/**/*.test.js\"",
        "test" : "npm run test:lint && npm run test:unit",
        "build" : "rollup --config",
        "prepack" : "npm run test && npm run build"
    },

    "types" : "crumble.d.ts"
}
